<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">All Cards</h1>

  <div class="overflow-x-auto">
    <table class="w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead class="bg-gray-200">
        <tr>
          <th class="px-4 py-2 text-left">Front</th>
          <th class="px-4 py-2 text-left">Back</th>
          <th class="px-4 py-2 text-left">Next Review</th>
          <th class="px-4 py-2 text-left" colspan="2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cards.each do |card| %>
          <tr class="border-b hover:bg-gray-100">
            <td class="px-4 py-2"><%= card.front %></td>
            <td class="px-4 py-2"><%= card.back %></td>
            <td class="px-4 py-2"><%= card.next_review&.strftime("%Y-%m-%d %H:%M") || "Not scheduled" %></td>
            <td class="px-4 py-2">
              <%= link_to "Edit", edit_card_path(card), class: "text-green-600 hover:text-green-800" %>
            </td>
            <td class="px-4 py-2">
              <%= button_to "Delete", card_path(card), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this card?" } }, class: "text-red-600 hover:text-red-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>