<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4">
      <h1 class="text-3xl font-bold mb-4"><%= @word.hiragana %></h1>
      
      <div class="mb-4">
        <strong class="text-gray-700">Romanji:</strong>
        <p class="text-gray-900"><%= @word.romanji %></p>
      </div>
      
      <div class="mb-4">
        <strong class="text-gray-700">Kanji:</strong>
        <p class="text-gray-900"><%= @word.kanji %></p>
      </div>
      
      <div class="mb-4">
        <strong class="text-gray-700">English Meaning:</strong>
        <p class="text-gray-900"><%= @word.english_meaning %></p>
      </div>
    </div>
    
    <div class="px-6 py-4 bg-gray-100">
      <%= link_to "Edit", edit_word_path(@word), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= link_to "Back", words_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
