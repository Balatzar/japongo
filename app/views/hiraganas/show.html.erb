<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4">
      <h1 class="text-2xl font-bold mb-4">Hiragana Details</h1>
      
      <div class="mb-4">
        <p class="text-gray-700 font-semibold">Name:</p>
        <p class="text-xl"><%= @hiragana.name %></p>
      </div>
      
      <div class="mb-4">
        <p class="text-gray-700 font-semibold">Translated Name:</p>
        <p class="text-xl"><%= @hiragana.translated_name %></p>
      </div>

      <div class="mb-4">
        <p class="text-gray-700 font-semibold">Memo:</p>
        <p class="text-lg"><%= @hiragana.memo %></p>
      </div>

      <div class="mb-4">
        <p class="text-gray-700 font-semibold">Story:</p>
        <p class="text-lg"><%= @hiragana.story %></p>
      </div>
    </div>
    
    <div class="px-6 py-4 bg-gray-100">
      <%= link_to "Edit", edit_hiragana_path(@hiragana), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= button_to "Delete", hiragana_path(@hiragana), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this hiragana?" } }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= link_to "Back", hiraganas_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>