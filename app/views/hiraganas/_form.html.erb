<%= form_with(model: hiragana, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
  <% if hiragana.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <strong class="font-bold">Error:</strong>
      <ul>
        <% hiragana.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :translated_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :translated_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :memo, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :memo, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :story, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :story, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :image, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.file_field :image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :story_image, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.file_field :story_image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :building_block_ids, "Building Blocks", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.collection_check_boxes :building_block_ids, BuildingBlock.all, :id, :name do |b| %>
      <div class="mb-2 flex items-center">
        <%= b.check_box(class: "mr-2 leading-tight") %>
        <%= b.label(class: "flex items-center text-sm") do %>
          <% if b.object.image.attached? %>
            <%= image_tag b.object.image, class: "w-8 h-8 mr-2 object-contain" %>
          <% end %>
          <%= b.text %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Back", hiraganas_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
  </div>
<% end %>