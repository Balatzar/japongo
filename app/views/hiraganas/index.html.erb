<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Hiraganas</h1>

  <div class="overflow-x-auto">
    <table class="w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead class="bg-gray-200">
        <tr>
          <th class="px-4 py-2 text-left">Name</th>
          <th class="px-4 py-2 text-left">Translated Name</th>
          <th class="px-4 py-2 text-left">Memo</th>
          <th class="px-4 py-2 text-left" colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @hiraganas.each do |hiragana| %>
          <tr class="border-b hover:bg-gray-100">
            <td class="px-4 py-2"><%= hiragana.name %></td>
            <td class="px-4 py-2"><%= hiragana.translated_name %></td>
            <td class="px-4 py-2"><%= truncate(hiragana.memo, length: 50) %></td>
            <td class="px-4 py-2">
              <%= link_to "Show", hiragana, class: "text-blue-600 hover:text-blue-800" %>
            </td>
            <td class="px-4 py-2">
              <%= link_to "Edit", edit_hiragana_path(hiragana), class: "text-green-600 hover:text-green-800" %>
            </td>
            <td class="px-4 py-2">
              <%= button_to "Delete", hiragana_path(hiragana), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this hiragana?" } }, class: "text-red-600 hover:text-red-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%= link_to "New Hiragana", new_hiragana_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>