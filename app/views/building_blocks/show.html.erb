<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4">
      <h1 class="text-2xl font-bold mb-4">Building Block Details</h1>
      
      <div class="mb-4">
        <p class="text-gray-700 font-semibold">Name:</p>
        <p class="text-xl"><%= @building_block.name %></p>
      </div>
      
      <div class="mb-4">
        <p class="text-gray-700 font-semibold">Image:</p>
        <%= image_tag @building_block.image, class: "w-64 h-64 object-cover rounded-lg" if @building_block.image.present? %>
      </div>
    </div>
    
    <div class="px-6 py-4 bg-gray-100">
      <%= link_to "New", new_building_block_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= link_to "Edit", edit_building_block_path(@building_block), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= button_to "Delete", building_block_path(@building_block), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this building block?" } }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= link_to "Back", building_blocks_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
