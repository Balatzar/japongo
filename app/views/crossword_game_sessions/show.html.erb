<div class="flex flex-col items-center w-full max-w-3xl mx-auto">
  <div id="crossword-game" data-controller="crossword-game" class="mb-8 w-full">
    <div class="flex justify-center mb-4">
      <table class="border-collapse">
        <% @crossword_game_session.grid.each_with_index do |row, row_index| %>
          <tr>
            <% row.each_with_index do |cell, col_index| %>
              <td class="w-8 h-8 border border-gray-300 p-0">
                <% if cell == " " %>
                  <div class="w-full h-full bg-black"></div>
                <% else %>
                  <div class="w-full h-full bg-white relative">
                    <% if cell != " " %>
                      <span class="absolute top-0 left-0 text-xs"><%= cell %></span>
                    <% end %>
                    <input type="text" maxlength="1" class="w-full h-full text-center focus:outline-none" data-row="<%= row_index %>" data-col="<%= col_index %>">
                  </div>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">Clues</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h3 class="font-semibold mb-2">Across</h3>
          <ul class="list-decimal pl-5">
            <% @crossword_game_session.clues.select { |c| c["direction"] == "horizontal" }.each do |clue| %>
              <li>
                <%= clue["starting_index"].join(", ") %>: 
                <%= @crossword_game_session.words.find { |word| word.hiragana == clue["word"] }.english_meaning %>
              </li>
            <% end %>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold mb-2">Down</h3>
          <ul class="list-decimal pl-5">
            <% @crossword_game_session.clues.select { |c| c["direction"] == "vertical" }.each do |clue| %>
              <li>
                <%= clue["starting_index"].join(", ") %>: 
                <%= @crossword_game_session.words.find { |word| word.hiragana == clue["word"] }.english_meaning %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
